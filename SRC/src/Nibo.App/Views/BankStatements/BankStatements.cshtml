@model Nibo.App.ViewModels.BankStatementViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankAccount.Bank.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankAccount.Bank.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankAccount.AgencyCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankAccount.AgencyCodeFormatted)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankAccount.AccountCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankAccount.AccountCode)
            </dd>
        </dl>
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">
                        @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.NomeSortParm }, new { @style = "text-decoration: none; color: #fff;" })
                    </th>
                    <th class="text-center">
                        @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.IsbnSortParm }, new { @style = "text-decoration: none; color: #fff;" })
                    </th>
                    <th class="text-center">
                        @Html.ActionLink("Transaction Value", "Index", new { sortOrder = ViewBag.AutorSortParm }, new { @style = "text-decoration: none; color: #fff;" })
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.DateFormatted)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.TransactionValueFormatted)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
